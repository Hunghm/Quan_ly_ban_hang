<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ThemSanPhamActivity">

    <TextView
        android:id="@+id/tv_title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F07B52"
        android:gravity="center"
        android:text="Thêm sản phẩm"
        android:padding="15px"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="93dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_title2"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/img_sanpham" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="20dp"
        android:textColor="#F07B52"
        android:text="Tên sản phẩm" />

    <EditText
        android:id="@+id/ed_ten_sp_add"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/textView8"
        />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed_ten_sp_add"
        android:textColor="#F07B52"
        android:text="Loại sản phẩm" />

    <Spinner
        android:id="@+id/spn_loai_sp_add"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/textView4"

        />
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F07B52"
        android:layout_below="@+id/spn_loai_sp_add"
        android:text="Giá nhập" />

    <EditText
        android:id="@+id/ed_gia_nhap_add"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@+id/textView1"
        />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F07B52"
        android:layout_below="@+id/ed_gia_nhap_add"
        android:text="Giá xuất"/>

    <EditText
        android:id="@+id/ed_gia_xuat_add"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@+id/textView2"
        />
    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F07B52"
        android:layout_below="@+id/ed_gia_xuat_add"
        android:text="Ghi chú" />

    <EditText
        android:id="@+id/ed_ghi_chu_add"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:layout_below="@+id/textView12"
        />

    <Button
        android:id="@+id/btn_add"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed_ghi_chu_add"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Thêm" />


</RelativeLayout>